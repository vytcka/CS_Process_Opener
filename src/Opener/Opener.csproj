<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

 <PropertyGroup>
    <PlaywrightBrowserDir>src\Opener\ms-playwright</PlaywrightBrowserDir>
  </PropertyGroup>

 <ItemGroup>
   <PackageReference Include="Microsoft.Playwright" Version="1.54.0" />
 </ItemGroup>

   
  <ItemGroup>
    <Content Include="src\Opener\ms-playwright\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      <Link>ms-playwright\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </Content>
  </ItemGroup>


  <ItemGroup>
    <None Update="domains.default.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>


</Project>